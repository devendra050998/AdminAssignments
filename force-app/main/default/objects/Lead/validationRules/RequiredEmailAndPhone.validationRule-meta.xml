<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RequiredEmailAndPhone</fullName>
    <active>true</active>
    <errorConditionFormula>IF(  ISBLANK( Email )  &amp;&amp;  ISBLANK(  Phone ) ,true,false)</errorConditionFormula>
    <errorMessage>Either Email Or Phone is required to create the record</errorMessage>
</ValidationRule>
